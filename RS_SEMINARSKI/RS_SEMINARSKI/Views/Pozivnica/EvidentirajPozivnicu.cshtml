<div id="KONT_STRANICE">
    <div id="NavMain">
        <button class="btn" onclick="window.location = '/Vjencanje/PrikazPocetne?KorisnikID=@Model.KorisnikID'">Početna strana </button>
        <button class="btn" onclick="window.location ='/Korisnik/PrikazRacuna?korisnikID=@Model.KorisnikID'">Korisnički račun</button>
        <button class="btn" onclick="window.location='/Autentifikacija/LogOut'">Odjavi se</button>
    </div>
    <div id="GLAVNI">
        <div id="Slika">
            <img id="vjecanje" src="https://i.pinimg.com/236x/d0/08/52/d008526f93207b56a429223e9875e3e5.jpg" alt="Mountains">

        </div>
        <div id="glavnii">
            <div id="SpanElement">
                <span>Evidencija pozivnice </span><br />
            </div>
            <form id="forma" enctype="multipart/form-data" asp-controller="Pozivnica" asp-action="Snimi">

                <input asp-for="PozivnicaID" value="@Model.PozivnicaID" hidden />
                <input class="input_polje" asp-for="KorisnikID" value="@Model.KorisnikID" hidden />
                <label>Opis pozivnice </label>
                <input required class="input_polje" asp-for="OpisPozivnice" />
                <br />
                <label>Cijena </label>
                <input required class="input_polje" asp-for="CijenaPozivnice" />
                <br />
                <label asp-for="SlikaPozivnice" class="control-label">Odaberite fotografiju pozivnice</label>
                <input  required class="input_poljee" asp-for="SlikaPozivnice" class="form-control " />
                <span asp-validation-for="SlikaPozivnice" class="text-danger"></span>
                <input id="neko" type="submit" value="Snimi" />

            </form>
        </div>
    </div>
</div>
