                            <form id="register-form" role="form" autocomplete="off" class="form" asp-controller="Korisnik" asp-action="ZaboravljenaSifra">

                                <div class="form-group">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-envelope color-blue"></i></span>
                                        <input id="email" name="KorisnickoIme" placeholder=" Korisnicko Ime" class="form-control">
                                    </div>
                                </div>
                                <div class="form-group">
                                    <input name="recover-submit" class="btn btn-lg btn-primary btn-block" value="Resetuj šifru" type="submit">
                                </div>

                              
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
