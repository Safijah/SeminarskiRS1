                <br />

                <label id="labela">Godina isteka kreditne kartice</label>

                <input class="input_polje" asp-for="GodinaIstekaKartice" />
                <br />

                <label id="labela">CVC</label>
                <input class="input_polje" asp-for="CVC" />
                <br />
                
                <br />
                <input class="input_polje" type="submit" value="Plati"  />





